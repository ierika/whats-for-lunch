extends ../base

block content
    .row
        .col.s12.center-align.mt-2
            // todo: must make a gravatar hasher
            img(src=`https://s.gravatar.com/avatar/${emailHash}?s=400`).gravatar

    form(action="", method="POST")#registerForm.mt-2
        .row
            .col.m8.offset-m2
                h3.center-align.mb-1 #{user.firstName} #{user.lastName}
                .row
                    .input-field.col.m6.s12
                        input(type="text", name="firstName", value=user.firstName)
                        label(for="firstName") First name

                    .input-field.col.m6.s12
                        input(type="text", name="lastName", value=user.lastName)
                        label(for="lastName") Last name

                    .input-field.col.s12
                        p= user.email


                .row
                    .col.s12.right-align.
                        <a href="/user/change-password" class="left">Change password</a>

                        <button class="btn waves-effect waves-light blue" type="submit" name="action">
                            Save <i class="material-icons right">send</i>
                        </button>
