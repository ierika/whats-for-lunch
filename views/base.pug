doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        block head_meta

        title= config.SITE_NAME

        link(href="/static/css/base.css" rel="stylesheet")
        link(href="/static/vendor/css/materialize.min.css" rel="stylesheet")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
        block head_link
        
        block head_script

    body
        .navbar-fixed
            nav.red
                .nav-wrapper
                    a(href="/").brand-logo
                        h1.hide= config.SITE_NAME
                        h5.brand-text &nbsp;#{config.SITE_NAME}&nbsp
                            br
                            span.slogan.hide-on-small-only= config.SLOGAN
                    ul#nav.mobile.right.hide-on-med-and-down
                        li
                            a(href="/") Home
                        if currentUser
                            li
                                a(href="/profile") Profile
                            li
                                a(href="/logout") Logout
                        else
                            li
                                a(href="/login") Login
                            li
                                a(href="/signup") Signup

        .container
            .col.s12
                block content

    footer
        .container.center-align= `Â© 2018 What's for lunch`
            br
            span
                | Made in Node.js with love by 
                a(href="https://github.com/iErika", target="_blank").text-muted Erika Suzuki
            br
            span.text-muted.disclaimer.
                Disclaimer: This is just a toy application for learning purposes.
                    
    script(src="/static/vendor/js/jquery-3.3.1.min.js")
    script(src="/static/vendor/js/materialize.min.js")
    script(src="/static/js/app.js")
    block inline_script
